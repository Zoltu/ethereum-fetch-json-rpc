{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "es2015",
		"moduleResolution": "node",
		"outDir": "output-es",
		"noEmit": false,
		"declaration": true,
		"plugins": [
			{ "transform": "@zoltu/typescript-transformer-append-js-extension" }
		]
	},
	"exclude": [
		"source/**/*.tests.ts",
	],
}
